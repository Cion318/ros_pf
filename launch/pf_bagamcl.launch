<launch>

  <param name="/use_sim_time" value="true"/>
  <include file="$(find particlefilter)/launch/pf_rviz.launch"/>

  <node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(find particlefilter)/bags/2021-08-12-09-10-27.bag"/>

  <!-- Map Server Arguments -->
  <arg name="map_file" default="$(find particlefilter)/maps/map_g.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Arguments -->
  <arg name="scan_topic"     default="scan"/>
  <arg name="initial_pose_x" default="0.0"/>
  <arg name="initial_pose_y" default="0.0"/>
  <arg name="initial_pose_a" default="0.0"/>

  <!-- AMCL -->
  <node pkg="amcl" type="amcl" name="amcl">
    <param name="min_particles"             value="100"/>
    <param name="max_particles"             value="3000"/>
    <param name="odom_model_type"           value="omni-corrected"/>
    <param name="odom_alpha1"               value="0.000001"/>
    <param name="odom_alpha2"               value="0.000005"/>
    <param name="odom_alpha3"               value="0.000001"/>
    <param name="odom_alpha4"               value="0.000005"/>
    <param name="odom_alpha5"               value="0.000002"/>


    <param name="update_min_d"            value="0.05"/>
    <param name="update_min_a"            value="0.5"/>

    <param name="selective_resampling"      value="true"/>

    <param name="odom_frame_id"             value="odom"/>
    <param name="base_frame_id"             value="base_link"/>
    <param name="global_frame_id"           value="map"/>
    <!--
    <param name="min_particles"             value="500"/>       # Minimum allowed number of particles. 
    <param name="max_particles"             value="3000"/>      # Maximum allowed number of particles. 
    <param name="kld_err"                   value="0.02"/>      # Maximum error between the true distribution and the estimated distribution. 
    <param name="update_min_d"              value="0.20"/>      # Translational movement required before performing a filter update. 
    <param name="update_min_a"              value="0.20"/>      # Rotational movement required before performing a filter update. 
    <param name="resample_interval"         value="1"/>         # Number of filter updates required before resampling. 
    <param name="transform_tolerance"       value="0.5"/>       # Time with which to post-date the transform that is published, to indicate that this transform is valid into the future. 
    <param name="recovery_alpha_slow"       value="0.00"/>      # Exponential decay rate for the slow average weight filter, used in deciding when to recover by adding random poses.
    <param name="recovery_alpha_fast"       value="0.00"/>      # Exponential decay rate for the fast average weight filter, used in deciding when to recover by adding random poses.
    <param name="initial_pose_x"            value="$(arg initial_pose_x)"/> # Initial pose mean (x), used to initialize filter with Gaussian distribution. 
    <param name="initial_pose_y"            value="$(arg initial_pose_y)"/> # Initial pose mean (y), used to initialize filter with Gaussian distribution. 
    <param name="initial_pose_a"            value="$(arg initial_pose_a)"/> # Initial pose mean (yaw), used to initialize filter with Gaussian distribution. 
    <param name="gui_publish_rate"          value="50.0"/>      # Maximum rate (Hz) at which scans and paths are published for visualization, -1.0 to disable. 
    <param name="laser_min_range"           value="3.5"/>       # Minimum scan range to be considered; -1.0 will cause the laser's reported minimum range to be used.
    <param name="laser_max_range"           value="3.5"/>       # Maximum scan range to be considered; -1.0 will cause the laser's reported minimum range to be used. 
    <param name="laser_max_beams"           value="180"/>       # How many evenly-spaced beams in each scan to be used when updating the filter. 
    <param name="laser_z_hit"               value="0.5"/>       # Mixture weight for the z_hit part of the model. 
    <param name="laser_z_short"             value="0.05"/>      # Mixture weight for the z_short part of the model. 
    <param name="laser_z_max"               value="0.05"/>      # Mixture weight for the z_max part of the model. 
    <param name="laser_z_rand"              value="0.5"/>       # Mixture weight for the z_rand part of the model. 
    <param name="laser_sigma_hit"           value="0.2"/>       # Standard deviation for Gaussian model used in z_hit part of the model. 
    <param name="laser_lambda_short"        value="0.1"/>       # Exponential decay parameter for z_short part of model. 
    <param name="laser_likelihood_max_dist" value="2.0"/>       # Maximum distance to do obstacle inflation on map, for use in likelihood_field model. 
    <param name="laser_model_type"          value="likelihood_field"/>  # Which model to use, either beam, likelihood_field, or likelihood_field_prob.
    <param name="odom_model_type"           value="omni-corrected"/>    # Which model to use, either "diff", "omni", "diff-corrected" or "omni-corrected". 
    <param name="odom_alpha1"               value="0.05"/>      # Specifies the expected noise in odometry's rotation estimate from the rotational component of the robot's motion.
    <param name="odom_alpha2"               value="0.05"/>      # Specifies the expected noise in odometry's rotation estimate from translational component of the robot's motion. 
    <param name="odom_alpha3"               value="0.1"/>       # Specifies the expected noise in odometry's translation estimate from the translational component of the robot's motion. 
    <param name="odom_alpha4"               value="0.05"/>      # Specifies the expected noise in odometry's translation estimate from the rotational component of the robot's motion. 
    <param name="odom_alpha5"               value="0.05"/>      # Translation-related noise parameter (only used if model is "omni"). 
    <param name="odom_frame_id"             value="odom"/>      # Which frame to use for odometry. 
    <param name="base_frame_id"             value="base_footprint"/>    # Which frame to use for the robot base.
    <param name="global_frame_id"           value="map"/>       # The name of the coordinate frame published by the localization system.
    <param name="tf_broadcast"              value="true"/>      # Set this to false to prevent amcl from publishing the transform between the global frame and the odometry frame. 
    -->
  </node>
</launch>